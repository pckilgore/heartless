{
  "name": "Heartless",
  "description": "Makes browsing a pain if you've been lazy.",
  "manifest_version": 2,
  "version": "1.0",
  "homepage_url": "https://github.com/pckilgore/heartless",
  "applications": {
    "gecko": {
      "id": "heartless@pck.email"
    }
  },
  "icons": {
    "48": "icons/heart-18.svg"
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": "icons/heart-18.svg",
    "default_title": "Hide heartless for 20 seconds & refresh data."
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["heartless.js"],
      "css": ["assets/base.css"]
    }
  ],
  "background": {
    "scripts": ["heartless-background.js", "authorize.js", "userinfo.js"]
  },
  "permissions": [
    "<all_urls>",
    "*://www.googleapis.com/*",
    "*://accounts.google.com/*",
    "identity",
    "notifications"
  ]
}
